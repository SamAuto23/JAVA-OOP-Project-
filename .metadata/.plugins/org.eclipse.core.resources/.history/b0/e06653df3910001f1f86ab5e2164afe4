package Shop;

public class Product {
    // Attributes
    private String barcode;
    private String category;
    private String brand;
    private String color;
    private String connectivity;
    private int quantityInStock;
    private double originalCost;
    private double retailPrice;
    private String additionalInformation; // General additional information
    
    // Constructor for general products
    public Product(String barcode, String category, String brand, String color,
                   String connectivity, int quantityInStock, double originalCost, double retailPrice,
                   String additionalInformation) {
        this.barcode = barcode;
        this.category = category;
        this.brand = brand;
        this.color = color;
        this.connectivity = connectivity;
        this.quantityInStock = quantityInStock;
        this.originalCost = originalCost;
        this.retailPrice = retailPrice;
        this.additionalInformation = additionalInformation;
    }
    
    // Getters
    public String getBarcode() {
        return barcode;
    }
    
    public String getCategory() {
        return category;
    }
    
    
    public String getBrand() {
        return brand;
    }
    
    public String getColor() {
        return color;
    }
    
    public String getConnectivity() {
        return connectivity;
    }
    
    public int getQuantityInStock() {
        return quantityInStock;
    }
    
    public double getOriginalCost() {
        return originalCost;
    }
    
    public double getRetailPrice() {
        return retailPrice;
    }
    
    public String getAdditionalInformation() {
        return additionalInformation;
    }
    
    // Methods
    public double getPrice() {
        return retailPrice; // Assuming retail price is the price we want to return
    }
    
    public String getDescription() {
        return "Category: " + category + ", Brand: " + brand + ", Color: " + color; // Example description
    }
}
