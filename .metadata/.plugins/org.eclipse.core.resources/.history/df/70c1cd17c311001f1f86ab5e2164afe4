package Shop;

import java.text.SimpleDateFormat;
import java.util.Date;

public class PayPalPayment implements PaymentMethod {
    private String email;

    public PayPalPayment(String email) {
        this.email = email;
    }

    @Override
    public Receipt processPayment(double amount, Address fullAddress) {
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        String today = sdf.format(new Date());
        String details = String.format("%.2f paid by PayPal using %s on %s, and the delivery address is %s",
                                       amount, email, today, fullAddress.toString());
        return new Receipt(details);
    }
}
