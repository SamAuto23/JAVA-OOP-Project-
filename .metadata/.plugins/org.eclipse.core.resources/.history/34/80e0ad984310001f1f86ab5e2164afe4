package Shop;
import java.util.*;
import java.io.*;

public class Admin extends User {

    public Admin(String userId, String username, String name, String Useraddress, String role) {
        super(userId, username, name, Useraddress, role);
    }

    @Override
    public void displayOptions() {
        System.out.println("Admin Options:");
        System.out.println("1. View Products");
        System.out.println("2. Add Product");
        // Further admin options can be added here
    }

    public void viewProducts() {
        List<Product> products = readProducts();
        Collections.sort(products, Comparator.comparingDouble(Product::getRetailPrice));
        for (Product p : products) {
            System.out.println(p);
        }
    }

    public void addProduct(Product product) {
        try (FileWriter fw = new FileWriter("Stock.txt", true);
             BufferedWriter bw = new BufferedWriter(fw);
             PrintWriter out = new PrintWriter(bw)) {
            out.println(product);
        } catch (IOException e) {
            System.out.println("An error occurred while writing to file.");
        }
    }

    private List<Product> readProducts() {
        List<Product> products = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader("Stock.txt"))) {
            String line;
            while ((line = br.readLine()) != null) {
                products.add(Product.fromString(line));
            }
        } catch (IOException e) {
            System.out.println("An error occurred while reading the file.");
        }
        return products;
    }
}
